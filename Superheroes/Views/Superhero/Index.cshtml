@model IEnumerable<Superheroes.Models.SuperHero>

@{
    ViewBag.Title = "Index";
}
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12" align="center">
                    <h2>Superheroes</h2>
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                </div>
            </div>
        </div>
        <table class="table" align="right">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AlterEgo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimaryAbility)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SecondaryAbility)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CatchPhrase)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlterEgo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatchPhrase)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
            }

        </table>
    </body>
